<!doctype html public "DrummerHead">
<html>
<head>
<title><%= posta_title(yield(:title)) %></title>
<meta charset='utf-8'>
<%= stylesheet_link_tag    "application" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
</head>

<body>

<%= render "layouts/head" %>
<div class="container">

  <% flash.each do |key, value|%>
    <div class='alert alert-<%= key %>'><%= value %></div>
  <% end %>

  <%= yield %>

  <%= render "layouts/feet" %>

  <%= debug(params) if Rails.env.development? %>
</div>



</body>
</html>
